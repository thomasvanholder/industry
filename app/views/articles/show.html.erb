<div class="container max-w-screen-md mx-auto px-6 text-center">
  <h3 class="text-3xl font-semibold mt-16 mb-5">
    <%= @article.title %>
  </h3>

  <div class="py-4 mb-5 border-t border-b mx-8">
    <div class="flex justify-center">
      <div class="w-3/5">
        <div class="flex">
          <%= image_tag "avatar.jpeg", class:"rounded-full h-12" %>
          <div class="flex flex-col text-sm ml-3">
            <span class="h6">
              <a href="" class="text-teal-500">Hanna Wolfe</a>
              <button type="button" class="text-gray-200 text-xs h-6 rounded px-2 ml-1 bg-teal-500">Follow</button></span>
            <span class="d-block text-muted text-left">July 15, 2018</span>
          </div>
        </div>
      </div>
      <div class="w-2/5">
        <span class="block text-sm font-normal text-gray-700 mr-2">Share:</span>

        <a class="text-sm w-6 h-6 bg-gray-600 rounded ml-2" href="#">
          <i class="fab fa-twitter"></i>
        </a>
      </div>
    </div>
  </div>

  <%= @article.content %>
  <i class="fab fa-twitter"></i>

  <div class="border-top border-bottom ">
    <div class="row align-items-md-center">

      <div class="col-md-5">
        <div class="d-flex justify-content-md-end align-items-center">
          <span class="d-block small font-weight-bold text-cap mr-2">Share:</span>
          <a class="btn btn-xs btn-icon btn-soft-secondary rounded-circle ml-2" href="#">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a class="btn btn-xs btn-icon btn-soft-secondary rounded-circle ml-2" href="#">
            <i class="fab fa-twitter"></i>
          </a>
          <a class="btn btn-xs btn-icon btn-soft-secondary rounded-circle ml-2" href="#">
            <i class="fab fa-instagram"></i>
          </a>
          <a class="btn btn-xs btn-icon btn-soft-secondary rounded-circle ml-2" href="#">
            <i class="fab fa-telegram"></i>
          </a>
        </div>
      </div>
    </div>
  </div>


</div>
